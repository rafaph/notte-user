{
  "name": "simple-note-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start:dev": "ts-node-dev -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:dev:test": "ts-node -r tsconfig-paths/register src/main.ts",
    "test": "mocha",
    "pretest:cov": "rm -rf coverage .nyc_output",
    "test:cov": "nyc mocha",
    "test:e2e": "npm run test -- --grep @integration",
    "test:unit": "npm run test:e2e -- --invert",
    "prelint": "ls-lint",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "check-updates": "npm-check-updates"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@ls-lint/ls-lint": "^1.11.2",
    "@types/async": "^3.2.15",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.3",
    "@types/chai-arrays": "^2.0.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-datetime": "^0.0.37",
    "@types/chai-subset": "^1.3.3",
    "@types/cors": "^2.8.12",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.56",
    "@types/pg": "^8.6.5",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "async": "^3.2.4",
    "axios": "^0.27.2",
    "chai": "^4.3.6",
    "chai-arrays": "^2.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.8.0",
    "chai-subset": "^1.6.0",
    "connection-string": "^4.3.5",
    "eslint": "~8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "get-port-please": "^2.6.1",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "npm-check-updates": "^16.0.6",
    "nyc": "^15.1.0",
    "pino-pretty": "^9.1.0",
    "prettier": "2.7.1",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "~4.7.4"
  },
  "dependencies": {
    "0http": "^3.4.1",
    "argon2": "^0.29.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "http-status": "^1.5.2",
    "inversify": "^6.0.1",
    "low-http-server": "^4.1.0",
    "oxide.ts": "^1.0.5",
    "pg": "^8.8.0",
    "pino": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.18.0"
  }
}
